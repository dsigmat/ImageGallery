@model LoginViewModel
@{

}
<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto" style="box-shadow: 0 10px 18px rgba(0,0,0,0.2), 0 5px 5px rgba(0,0,0,0.2);">
        <form asp-controller="Auth" asp-action="Login" method="post">
            <div class="form-group">
                <label>User Name</label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Sign In" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Gallery" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}